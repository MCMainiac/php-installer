<Page x:Class="PHP_Installer.Views.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PHP_Installer.Views"
      xmlns:vm="clr-namespace:PHP_Installer.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance vm:LoadingViewModel}"
      Title="LoadingPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontSize="20">Loading...</TextBlock>

            <ProgressBar Margin="0,20,0,0"
                         Height="15"
                         Width="250"
                         IsIndeterminate="{Binding Model.IsIndeterminate}"
                         Value="{Binding Model.Percentage}" />
        </StackPanel>
    </Grid>
</Page>
